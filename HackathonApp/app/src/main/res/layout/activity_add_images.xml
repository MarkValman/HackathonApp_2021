<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/take_picture_background"
    tools:context=".AddingPictures.AddImages">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="270dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/open_camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/take_picture_button"/>
        <ImageButton
            android:id="@+id/choose_from_gallery_bttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/choose_photo_button"/>

        <ImageView
            android:id="@+id/test_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    </LinearLayout>

</GridLayout>